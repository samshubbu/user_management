    </head>
    
    <body>
        <div class="container-fluid">
            <div>
                <form action="logout" method="get">
                    <h1>  <p style="float:left">Welcome to Add User Details: <%= username %> and password is:<%= password %> </p>  </h1><br>
                    <input type="submit" style="float:right" class="btn btn-info" value='Logout'>
                </form>
        </div>
        
        <div style="background-color:grey">    
            <form action="Useradd" method="post">

                    <button type="submit" class="btn btn-default" >Add user</button>
                    

            </form>
        </div>
        
        <div>
            <a href='getUserlist'></a>
            
             <% if (typeof userlist =='object' && userlist)  {%> 
                        
             <table id="resultTable"  class="display" cellspacing='0' width="80%">
                <thead>
                    <tr>
                        <th>SNo.</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Photo</th>
                        <th>Delete</th>
                        <th>Edit</th>
                        
                    </tr>
                </thead>
                 <tbody>
                <% if(userlist.length){
                     for(var i=0;i<userlist.length;i++) { %>
                
               
                    <tr>
                        <td><%=userlist[i].id%></td>
                        <td><%=userlist[i].name%></td>
                        <td><%=userlist[i].address%></td>
                        <td><img src="../images/<%=userlist[i].Photo%>" width="50" height="50"></td>                     
                        <td><a href ='deleteUser?id=<%=userlist[i].id%>'>Deleteuser</a></td>
                        <td><a href ='editform?id=<%=userlist[i].id%>'>edituser</a></td>
                                                             
                    </tr>
                 
                
                <% } %>
            <% } %>
            </tbody>
            </table>
         <% } %>
            </div>
        
        

   
        </div>
         <script type="text/javascript">
            $(document).ready( function () {
                $('#resultTable').DataTable( {
                    // ordering: true,
                    dom: 'Bfrtip',
                    buttons: [
                    'pdf','print'
                    ]
                } );
            } );
        </script>
    </body>
</html>