<html>
<head>
    <title>
    </title>
    
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
          <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
          <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
          <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>
        <script>

            $(document).ready(function(){
                $("#formid").validate({

                    rules:{
                        id:"required",
                        name:"required",
                        address:"required",
                        myfile:"required"
                     },
                    messages:{
                        id: "please enter id.",
                        name: "please enter name",
                        address: "please enter address",
                        myfile: "You need to upload an image."
                    },
                    submitHandler: function(form){
                        form.submit();
                    }
                });
                
            
            $('#FileUpload1').change(
                function () {
                    var fileExtension = ['png','jpg'];
                    if ($.inArray($(this).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                        document.getElementById('alertmsg').innerHTML=" *Only '.png' '.jpg  format is allowed.";
//                        alert("Only '.png'  format is allowed.");
                        this.value = ''; // Clean field
                        return false;
                    }
                });
                });
                            
        </script>
</head>
    <body>
            <form action='adduser'  id="formid" class="form-group" method='post' enctype="multipart/form-data" onSubmit="validate">
                <table>
                   
                    <tr>
                        <td>Name:</td>
                        <td><input type='text' class="form-control" name="name" id='name' placeholder="Name" ></td><br>
                    </tr>
                    <tr>
                        <td>Address:</td>
                        <td><input type='text' class="form-control" name='address' id='address' placeholder="address" ></td>
                     </tr>
                    <tr>
                        <td>photo:</td>
                        <td><input type="file" class="btn btn-primary" id="FileUpload1" name="myfile"  /></td><br>
                         <td><span id="alertmsg" style="color:red"></span></td>
                     </tr>

                    <tr></tr>
                    <tr>
                        <td><button type="submit" class="btn btn-default" >Add user</button></td>

                        <br/>
                    </tr>
                 </table>
            </form>
        
    </body>
</html>